<script>
    $(document).ready(function () {
        function NameVerify() {
            if ($('#signUpName').val().length <= 2) {
                $('#firstNameMassage').html('length must be greater than 2');
                $('#firstNameMassage').css('color', 'red');
            }
            else {
                $('#firstNameMassage').html('length is in best form');
                $('#firstNameMassage').css('color', 'green');
            }
        }
        $('#signUpName').blur(function () {
            NameVerify();
        });
        function PasswordVerify() {
            if ($('#signUpConfirmPassword').val() == $('#signUpPassword').val()) {
                $('#PasswordMassage').html('Password Matched');
                $('#PasswordMassage').css('color', 'green');
            }
            else {
                $('#PasswordMassage').html('Password Not Matched');
                $('#PasswordMassage').css('color', 'red');
            }
        }
        $('#signUpConfirmPassword').blur(function () {
            PasswordVerify();
        });
        function PhoneVerify() {
            if ($('#signUpPhoneNo').val().length != 11) {
                $('#phoneMassage').html('Please enter 11 digit phone No!');
                $('#phoneMassage').css('color', 'red');
            }
            else {
                $('#phoneMassage').html('length is in best form');
                $('#phoneMassage').css('color', 'green');
            }
        }
        $('#signUpPhoneNo').blur(function () {
            PhoneVerify();
        });
        $('#signUpEmail').blur(function () {
            email = $('#signUpEmail').val();
            alert(email);
            jsonObject = { 'email': email };
            $.ajax({
                type: "POST",
                url: "http://localhost:44364/api/UserAPI/EmailCheck",
                data: JSON.stringify(jsonObject),
                contentType: 'application/json',
                success: function (response) {
                    if (response.status == 'Email verified') {
                        $('#EmailMassage').html('Email Verified');
                        $('#EmailMassage').css('color', 'green');
                    }
                    else {
                        $('#EmailMassage').html('Email already exist');
                        $('#EmailMassage').css('color', 'red');
                        $('#studnetEmail').focus();
                    }
                },
                error: function (errormsg) { prompt("", JSON.stringify(errormsg)) }
            });
        });
        $('.signUpBtn').click(function () {
            Name = $('#signUpName').val();
            email = $('#signUpEmail').val();
            phoneNo = $('#signUpPhoneNo').val();
            Password = $('#signUpPassword').val();
            ConfirmPassword = $('#signUpConfirmPassword').val();
            var jsonObject = { "userTitle": Name, "email": email, 'phoneNo': phoneNo, "password": Password };
            if (Password == ConfirmPassword) {
                $.ajax({
                    type: "POST",
                    url: "http://localhost:44364/api/UserAPI/InsertUserA",
                    contentType: "application/json",
                    data: JSON.stringify(jsonObject),
                    success: function (response) {
                        if (response.status == "Insertion successfull") {
                            $('#signUpName').val('');
                            $('#signUpEmail').val('');
                            $('#signUpPhoneNo').val('');
                            $('#signUpPassword').val('');
                            $('#signUpConfirmPassword').val('');
                            window.location.href = '/Home/Login';
                        }

                    }
                });
            }
            else {
                alert('password not matched');
            }
        });
    });
</script>
